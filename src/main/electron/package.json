{
  "name": "designer-for-flow",
  "version": "0.5.0",
  "main": "main.js",
  "license": "LGPL-3.0",
  "description": "Electron wrapper for 'Designer for Flow'",
  "dependencies": {
    "electron-packager": "^13.1.1",
    "minimal-request-promise": "^1.4.0",
    "tree-kill": "^1.1.0"
  },
  "scripts": {
    "package": "electron-packager ./ --icon=icon.ico --ignore=README.md --ignore=.idea --ignore=src --ignore=pom.xml",
    "package-windows": "electron-packager ./ --icon=icon.ico --ignore=README.md --ignore=.idea --ignore=src --ignore=pom.xml --platform=windows",
    "package-linux": "electron-packager ./ --icon=icon.ico --ignore=README.md --ignore=.idea --ignore=src --ignore=pom.xml --platform=darwin",
    "package-mac": "electron-packager ./ --icon=icon.ico --ignore=README.md --ignore=.idea --ignore=src --ignore=pom.xml --platform=darwin",
    "package-all": "electron-packager ./ --icon=icon.ico --ignore=README.md --ignore=.idea --ignore=src --ignore=pom.xml --platform=a"
  },
  "devDependencies": {
    "electron": "^5.0.1"
  }
}
